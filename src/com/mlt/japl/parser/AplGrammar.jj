AstNode userfndef() :
{
  AstNode fnBody = null;
}
{
  "{" (< STMTSEPARATOR >)*
      fnBody = toplevel_expr_list() (< STMTSEPARATOR >)*
  "}"
  {
    return fnBody;
  }
}

