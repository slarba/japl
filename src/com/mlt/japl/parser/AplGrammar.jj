}
{
  ident = < ID > ("[" e = indexexpr() "]")? ("\u2190" e2=arrayexpr())?
  {
    if(e2!=null)
    	return new AssignmentNode(ident.toString(), e2);
    else
	    return new IdentifierNode(ident.toString(), e);
