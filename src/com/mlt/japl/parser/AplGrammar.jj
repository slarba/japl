Func fn_expr() :
{
  Func s = null;
  AstNode userfn = null;
  Token m = null;
}
{
    userfn = userfndef() (m = < MONADICOPERATOR >)? {
      if(m!=null)      {
        return buildMonadicOperator(m.toString(), new UserFnNode(userfn, context));      } else      {         return new UserFnNode(userfn, context);
      }
    }
  | s = operatorexpr() (m = < MONADICOPERATOR >)? {
       if(m!=null)
