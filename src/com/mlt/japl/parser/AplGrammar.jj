}
{
	s = fn_or_userfn() ("." right = operatorexpr_noinnerprod()
	{
	  chain.add(right);
	})*
	{
	  if(chain.size() > 1)
	  {
	    chain.add(0,s);
	    Func x = chain.get(0);
	    for(int i=1; i<chain.size(); i++)
